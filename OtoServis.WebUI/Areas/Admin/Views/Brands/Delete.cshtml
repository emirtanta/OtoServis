@model Marka
@{
    ViewData["Title"] = "Marka Silme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center"><b>@ViewData["Title"]</b></h1>

<h3>@Model.Adi adlı markayı silmek istiyor musunuz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-controller="Brands" asp-action="Index" class="btn btn-outline-warning">Listeye Dön</a>
    </form>
</div>

