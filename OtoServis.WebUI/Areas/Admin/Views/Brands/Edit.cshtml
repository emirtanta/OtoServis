@model Marka
@{
    ViewData["Title"] = "Marka Düzenleme Formu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center"><b>@ViewData["Title"]</b></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-info" />

                <a asp-area="Admin" asp-controller="Brands" asp-action="Index" class="btn btn-outline-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

