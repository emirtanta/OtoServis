@model Musteri
@{
    ViewData["Title"] = "Müşteri Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3><b class="text-success">@Model.Adi @Model.Soyadi</b> adlı müşteriyi silmek istiyor musunuz?</h3>
<div>
    <h4>Müşteri Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Soyadi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyadi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TcNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notlar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notlar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Arac)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Arac.KasaTipi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-controller="Customers" asp-action="Index" class="btn btn-outline-warning">Listeye Dön</a>
    </form>
</div>

